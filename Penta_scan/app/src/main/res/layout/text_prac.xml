<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0A0A0"
    tools:context=".RegistrationFirst"
    >
   <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    >
    <ScrollView
        android:id="@+id/myview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#A0A0A0"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/prac_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/s_prac_fl" />

        <ImageView
            android:id="@+id/prac_im"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/prac_text"

            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:visibility="invisible"



            />
        <Button
            android:id="@+id/rise_esay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/prac_im"
            android:background="@drawable/mybutton"
            android:text="Повысь потенциал на 1%"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/rise_med"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/prac_im"
            android:background="@drawable/mybutton"
            android:text="Повысь потенциал на 2%"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="-60dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/rise_high"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/prac_im"
            android:background="@drawable/mybutton"
            android:text="Повысь потенциал на 3%"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="-120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentBottom="true"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            />
    </LinearLayout>
    </ScrollView>
       <ImageView
           android:id="@+id/backpot"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_alignParentLeft="true"
           android:background="#CC000000"
           android:visibility="invisible"
           />
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgpot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:layout_marginTop="80dp"

        android:layout_marginBottom="80dp"
        android:background="#00000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        >


        />

        <ImageView
            android:id="@+id/crosspot"
            android:layout_width="73dp"
            android:layout_height="wrap_content"

            android:layout_marginLeft="100dp"
            app:srcCompat="@android:drawable/ic_delete"

            />

        <ImageView
            android:id="@+id/potimg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            app:srcCompat="@drawable/fdich"

            />



    </LinearLayout>
   </FrameLayout>
</RelativeLayout>