<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AboutActivity">


    <android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/pashalka"
            android:layout_width="25dp"
            android:layout_height="23dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/butpash"
            android:text="?" />


        <ImageView
            android:id="@+id/human"
           android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"

            />
        <View
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:visibility="gone"
            android:text="@string/app_title"
            android:textColor="#000"
            android:textSize="45sp"
            android:textStyle="bold"
            android:background="@drawable/shadow"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/bartext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="170dp"

            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            android:shadowColor="#fff"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"
            />

    <View
        android:layout_width="match_parent"
        android:background="@drawable/circle"

        android:layout_marginTop="-180dp"
        android:layout_marginLeft="0dp"
        android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/nname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center_horizontal"

            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <io.exzorzio.pentascan.MatrixEffect
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            />
        <io.exzorzio.pentascan.MatrixEffect
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            />
        <io.exzorzio.pentascan.MatrixEffect
            android:layout_width="30dp"
            android:layout_height="match_parent"

            android:layout_marginTop="30dp"
            />
        <io.exzorzio.pentascan.MatrixEffect
            android:layout_width="match_parent"
            android:layout_height="30dp"

            android:layout_marginTop="0dp"
            />
        <io.exzorzio.pentascan.MatrixEffect
            android:layout_width="match_parent"
            app:layout_heightPercent="40%"
            android:layout_gravity="bottom"

            />

       />
        <ImageView
            android:id="@+id/back_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#CC000000"
            android:visibility="invisible"
            />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/name_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="80dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/dialog"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            >




            <TextView
                android:id="@+id/bluetxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Введи своё имя:"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                />
           <EditText
                android:id="@+id/type_name"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
            </EditText>
            <Button
                android:id="@+id/name_subm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/mybutton2"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="25dp"
                android:text="Подтвердить"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/name_subm2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="-70dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/mybutton2"
                android:text="Подтвердить"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="invisible"
                />


        </LinearLayout>
        <Button
            android:id="@+id/scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
android:layout_gravity="bottom"
            android:background="@drawable/mybutton"
            android:text="Сканировать себя"
            android:layout_marginBottom="90dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/scan2"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/mybutton3"
            android:text="Сфоткать друга"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/scan3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="16dp"
            android:background="@drawable/mybutton3"
            android:text="Сканировать друга"
            android:textColor="#fff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="invisible"
            />


        <ImageView
            android:id="@+id/backgod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="#CC000000"
            android:visibility="invisible"
            />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/godent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"

            android:layout_marginRight="50dp"
            android:background="@drawable/dialog"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible"
            >


            <ImageView
                android:id="@+id/godpick"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                app:srcCompat="@drawable/odin" />
            <TextView
                android:id="@+id/helptxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/godpick"
                android:layout_marginTop="-5dp"
                android:gravity="center_horizontal"
                android:text="&quot;назови меня и я дарую тебе победу, куда бы ты не взял меня с собой.&quot;"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"

                >

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/type_god"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/check_god"
                android:layout_width="200dp"
                android:layout_height="40dp"

                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/mybutton"
                android:text="Проверь себя"/>

        </LinearLayout>

    </android.support.percent.PercentFrameLayout>

</android.support.percent.PercentRelativeLayout>