<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD700"
    android:id="@+id/activity_view"
    tools:context=".MainActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        >

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="64dp"
            android:text="@string/app_title"
            android:textColor="#000"
            android:textSize="45sp"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/alert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="-175dp"
            android:text="Скан доступен раз в пять минут!!!"
            android:visibility="invisible" />
        <Button
            android:id="@+id/tomaterial"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_below="@+id/penta"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="-220dp"
            android:background="@drawable/mybutton"
            android:text="Перейти к практикам"
            android:visibility="invisible"
            />

        <ImageView
            android:id="@+id/penta"
            android:layout_width="match_parent"
            android:layout_height="463dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="19dp"
            android:layout_marginTop="90dp"
            android:contentDescription="@string/image_title"
            android:gravity="center"
            app:srcCompat="@drawable/gtyns"
            tools:ignore="ContentDescription"

            />


    </FrameLayout>

</RelativeLayout>